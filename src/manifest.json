{
  "name": "Atomix ChatGPT Sidebar (Support GPT-4)",
  "author": "Atomix",
  "description": "A ChatGPT Sidebar with GPT-4 support made by Atomix",
  "version": "1.0.0",
  "manifest_version": 3,
  "options_page": "options.html",
  "host_permissions": [
    "https://*.openai.com/",
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "cookies",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_title": "Atomix ChatGPT Sidebar",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "webcomponents-bundle.js",
        "contentScript.bundle.js"
      ],
      "css": ["fonts.css"],
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "logo.svg", "openai.svg", "fonts.css", "Quicksand-Medium.ttf", "Quicksand-SemiBold.ttf", "Quicksand-Bold.ttf", "options.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
